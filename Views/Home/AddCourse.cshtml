@model FeeManagement.Models.Semester_Wise_Courses

@{
    ViewBag.Title = "AddCourse";
    Layout = "~/Views/Shared/AdLayout.cshtml";
}
<head>

    <title>Admin - Add Courses</title>
</head>
<h3 class="text-center" style="font-weight:bolder">Admin Operation <span style="color:brown">( ADD - Course's )</span></h3>
@using (Html.BeginForm("AddCourse", "Home", FormMethod.Post))
{
    <div class="container m-3 pb-3">
        <div class="row shadow pt-4 bg-white p-4 rounded">
            <div class="col-sm pt-2">

                <div class="form-group">
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-arrow-alt-circle-down fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0 col-md-9">
                            @Html.DropDownListFor(model => model.DepartmentId, ViewBag.SemesterList as SelectList, "-- Select Department --", new { id = "Semesterid", htmlAttributes = new { @class = "form-control", required = "required" } })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <center>
                        <span id="status"></span>
                    </center>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-book-open fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0 col-md-9">
                            @Html.EditorFor(model => model.course_name, new { htmlAttributes = new { @class = "form-control , border border-top-0", placeholder = "Enter Course Name", required = "required"} })
                            @Html.ValidationMessageFor(model => model.course_name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="d-flex flex-row align-items-center mb-4">
                        <b><i><h4 style="font-size:25px">Rs</h4></i></b>
                        <div class="form-outline flex-fill mb-0 col-md-9">
                            @Html.EditorFor(model => model.fees, new { htmlAttributes = new { @class = "form-control , border border-top-0", placeholder = "Enter Course Fee's", required = "required" } })
                            @Html.ValidationMessageFor(model => model.fees, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


            </div>

            <div class="col-sm pt-2">
                <div class="form-group">
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-list fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0 col-md-9">
                            @Html.EditorFor(model => model.Semester, new { htmlAttributes = new { @class = "form-control , border border-top-0", placeholder = "Enter Semester * 1 ,2 ,3 ..*", required = "required" } })
                            @Html.ValidationMessageFor(model => model.Semester, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-calendar-alt fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0 col-md-9">
                            @Html.EditorFor(model => model.credit_hours, new { htmlAttributes = new { @class = "form-control , border border-top-0", placeholder = "Enter Course Credit Hour's", required = "required" } })
                            @Html.ValidationMessageFor(model => model.credit_hours, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Course" class="btn btn-primary rounded-pill" />
            </div>

        </div>
    </div>
}


