@model FeeManagement.Models.BSCS_First

@{
    ViewBag.Title = "AddBscsFirst";
    Layout = "~/Views/Shared/AdLayout.cshtml";
}

<head>

    <title>Admin - Add New Course</title>
</head>
<h3 class="text-center" style="font-weight:bolder">Admin Operation <span style="color:brown">( ADD - Course * Bscs First Semester* )</span></h3>
@using (Html.BeginForm("AddBscsFirst", "Home", FormMethod.Post))
{
    <div class="container m-3 pb-3">
        <div class="row shadow pt-4 bg-white p-4 rounded">
            <div class="col-sm pt-2">

                <div class="form-group">
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-id-badge fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0 col-md-9">
                            @Html.EditorFor(model => model.first_cn, new { htmlAttributes = new { @class = "form-control , border border-top-0 ", placeholder = "Course Name BSCS 1st Semester." } })
                            @Html.ValidationMessageFor(model => model.first_cn, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user-graduate fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0 col-md-9">
                            @Html.EditorFor(model => model.first_fees, new { htmlAttributes = new { @class = "form-control , border border-top-0", placeholder = "Course Fee's BSCS 1st Semester", required = "required" } })
                            @Html.ValidationMessageFor(model => model.first_fees, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-sm pt-2">
                <div class="form-group">
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-eye fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0 col-md-9">
                            @Html.EditorFor(model => model.first_credit_hours, new { htmlAttributes = new { @class = "form-control , border border-top-0", placeholder = "Course Credit Hour's BSCS 1st Semester", required = "required" } })
                            @Html.ValidationMessageFor(model => model.first_credit_hours, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary rounded-pill" />
                <a href="~/Home/BscsFirst">
                    <input type="button" value="Back" class="btn btn-danger rounded-pill" />
                </a>
            </div>
        </div>
    </div>


}